{
  "include": ["./src/*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "outDir": "./esm",
    "rootDir": "./src",

    /* 额外的检查 */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,

    "downlevelIteration": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true
  }
}
